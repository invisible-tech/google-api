{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "rootDir": "./",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
